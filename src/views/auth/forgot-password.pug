extends ../layout/index

block content
    div(class="py-10")
        h1(class="text-4xl my-10 font-extrabold text-center") Real
            span(class="font-normal") Estate
        h2(class="text-center text-2xl")= page

        if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg

        div(class="mt-8 mx-auto max-w-md")
            div(class="bg-white py-8 px-4 shadow")
                form(class="space-y-5" method="POST" action="/auth/forgot-password" novalidate)
                    input(type="hidden" name="csrfToken" value=csrfToken)
                    div
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="email") email
                        input(id="email" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="email@test.com" type="email" name="email")
                    div(class="flex items-center justify-between")
                        a(href="/auth/register" class="text-gray-500 text-xs") Don't have an account? Create an account
                        a(href="/auth/login" class="text-gray-500 text-xs") Do you have an account? Sign in
                    input(class="w-full text-white font-bold py-3 cursor-pointer bg-indigo-600 hover:bg-indigo-700" type="submit" value="Sent Instructions")
