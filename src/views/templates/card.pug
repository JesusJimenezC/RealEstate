div(class="bg-white shadow rounded-lg")
    img(src=`/uploads/${property.image}` alt=property.title class="object-cover h-72 w-full")
    div(class="p-5 space-y-5")
        h3(class="text-2xl font-bold text-gray-900")= property.title
        p(class="text-sm text-gray-600") Rooms:
            span(class="text-gray-800 font-bold ml-1")= property.rooms
        p(class="text-sm text-gray-600") WC:
            span(class="text-gray-800 font-bold ml-1")= property.wc
        p(class="text-sm text-gray-600") Price:
            span(class="text-gray-800 font-bold ml-1")= property.price.name
        a(href=`/property/${property.id}` class="block text-center bg-indigo-700 py-1 text-white rounded-md") View Property