extends ../layout/admin

block styles
    meta(name="csrfToken" content=csrfToken)
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")

block content
    div(class="py-10")
        h1(class="text-4xl my-10 font-extrabold text-center") Real
            span(class="font-normal") Estate
        h2(class="text-center text-2xl font-extrabold")= page

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form(id="image" class="dropzone border-dashed border-2 w-full min:h-96 h-auto rounded flex-col justify-center items-center" method="POST" action=`/properties/add-image/${property.id}`)
                input(type="hidden" name="csrfToken" value=csrfToken)

            button(class="w-full mt-5 py-3 bg-indigo-600 hover:bg-indigo-700 rounded text-white font-bold uppercase cursor-pointer" type="button" id="submit") Publish Property

block scripts
    script(src="/js/addImage.js")
